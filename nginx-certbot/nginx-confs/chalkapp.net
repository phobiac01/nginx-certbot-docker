server {
    server_name  .chalkapp.net;

    location / {
        root   /var/www/chalkapp.net/;
        index  index.html index.htm;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/chalkapp.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/chalkapp.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}server {
    if ($host = www.chalkapp.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = chalkapp.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen       80;
    server_name  .chalkapp.net;
    return 404; # managed by Certbot




}